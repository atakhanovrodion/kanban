{
  "ts-node": {
    "files": true
  },

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2020",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
